<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Album" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#e2e2e2</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="dialog_fullscreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/color_808080</item>
        <item name="hintTextColor">@color/color_6495ed</item>
    </style>

</resources>